{
  "name": "online-school-everyone",
  "version": "0.0.0",
  "scripts": {
    "preinstall": "npm install --save-dev npm-run-all scss-bundle husky stylelint stylelint-config-sass-guidelines",
    "postinstall": "husky install && npm run create-git-hooks",
    "prepare:start": "npm-run-all -s check-engines build:ui-lib copy-themes",
    "create-git-hooks": "husky add .husky/pre-commit \"npm run test && npm run lint && npx stylelint '**/*.scss'\"",
    "check-engines": "check-node-version --package -p",
    "start": "npm run prepare:start && ng serve",
    "lint": "ng lint app && ng lint landing && ng lint docs && ng lint ui-lib",
    "test": "ng test app && ng test landing && ng test docs && ng test ui-lib",
    "copy-themes": "npm-run-all --parallel copy-themes:app copy-themes:docs copy-themes:landing",
    "copy-themes:app": "XCOPY .\\projects\\ui-lib\\assets\\themes .\\projects\\app\\src\\assets\\themes /Y",
    "copy-themes:docs": "XCOPY .\\projects\\ui-lib\\assets\\themes .\\projects\\docs\\src\\assets\\themes /Y",
    "copy-themes:landing": "XCOPY .\\projects\\ui-lib\\assets\\themes .\\projects\\landing\\src\\assets\\themes /Y",
    "start:docs": "npm-run-all -s prepare:start && ng serve docs",
    "start:landing": "npm run prepare:start && ng serve landing",
    "watch:ui-lib-all": "npm-run-all --parallel watch-scss-bundle:ui-lib watch:ui-lib copy-themes",
    "watch:ui-lib": "ng build ui-lib --configuration development --watch",
    "build:ui-lib": "npm run clean:ui-lib && npm run build-scss-bundle:ui-lib && ng build ui-lib",
    "clean:ui-lib": "rimraf dist/ui-lib",
    "watch-scss-bundle:ui-lib": "scss-bundle --config ./projects/ui-lib/scss-bundle.config.json --watch",
    "build-scss-bundle:ui-lib": "scss-bundle --config ./projects/ui-lib/scss-bundle.config.json"
  },
  "private": true,
  "engines": {
    "node": ">=12.0.0",
    "npm": "^6.14.0 || ^7.6.0"
  },
  "dependencies": {
    "@angular/animations": "~12.1.1",
    "@angular/cdk": "^12.1.4",
    "@angular/common": "~12.1.1",
    "@angular/compiler": "~12.1.1",
    "@angular/core": "~12.1.1",
    "@angular/forms": "~12.1.1",
    "@angular/material": "^12.1.4",
    "@angular/platform-browser": "~12.1.1",
    "@angular/platform-browser-dynamic": "~12.1.1",
    "@angular/router": "~12.1.1",
    "@ngrx/effects": "^12.4.0",
    "@ngrx/store": "^12.2.0",
    "angular-in-memory-web-api": "^0.11.0",
    "check-node-version": "^4.1.0",
    "jasmine-marbles": "^0.8.3",
    "rxjs": "~6.6.0",
    "tslib": "^2.2.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.1.1",
    "@angular-eslint/builder": "12.2.0",
    "@angular-eslint/eslint-plugin": "12.2.0",
    "@angular-eslint/eslint-plugin-template": "12.2.0",
    "@angular-eslint/schematics": "12.2.0",
    "@angular-eslint/template-parser": "12.2.0",
    "@angular/cli": "~12.1.1",
    "@angular/compiler-cli": "~12.1.1",
    "@ngrx/store-devtools": "^12.4.0",
    "@types/jasmine": "~3.6.0",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "4.23.0",
    "@typescript-eslint/parser": "4.23.0",
    "eslint": "^7.26.0",
    "eslint-plugin-ngrx": "^1.0.0",
    "husky": "^7.0.2",
    "jasmine-core": "~3.7.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ng-packagr": "^12.1.0",
    "npm-run-all": "^4.1.5",
    "scss-bundle": "^3.1.2",
    "stylelint": "^13.13.1",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "typescript": "~4.3.5"
  }
}
